{
  "name": "nest-k6-testing",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:generate": "npm run typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm -- migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/typeorm.config.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/config/typeorm.config.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/config/typeorm.config.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/config/typeorm.config.ts",
    "schema:log": "npm run typeorm -- schema:log -d src/config/typeorm.config.ts",
    "seed:constitution": "ts-node src/scripts/seed-constitution.ts",
    "constitution:validate": "ts-node src/scripts/validate-constitution.ts",
    "db:setup": "docker-compose up -d postgres redis && sleep 5 && npm run migration:run",
    "db:reset": "npm run schema:drop && npm run migration:run",
    "loadtest:auth": "k6 run tests/k6/auth-load-test.js",
    "loadtest:search": "k6 run tests/k6/search-load-test.js",
    "loadtest:payment": "k6 run tests/k6/payment-load-test.js",
    "loadtest:constitution": "k6 run tests/k6/constitution-load-test.js",
    "loadtest:performance": "k6 run tests/k6/performance-load-test.js",
    "loadtest:governance": "k6 run tests/k6/governance-load-test.js",
    "loadtest:health": "k6 run tests/k6/health-load-test.js",
    "loadtest:quick": "k6 run tests/k6/quick-test-all.js",
    "loadtest:mixed": "k6 run tests/k6/mixed-workload-test.js",
    "loadtest:all": "node scripts/run-loadtests.js",
    "loadtest:all:failfast": "npm run loadtest:auth && npm run loadtest:constitution && npm run loadtest:performance && npm run loadtest:governance && npm run loadtest:health && npm run loadtest:search && npm run loadtest:payment && npm run loadtest:mixed"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "k6": "^0.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.17.0",
    "typeorm": "^0.3.28",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/redis": "^4.0.11",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
